<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bleuTurquoise</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/bleuTurquoise</item>
        <item name="colorControlHighlight">@color/bleuTurquoise</item>
        <item name="android:statusBarColor">@color/actionBar</item>
        <!-- <item name="android:statusBarColor">@color/bmeuTurqoise</item>
        Permet d'avoir un ensemnle de couleur uni sur le haut -->
        <item name="android:navigationBarColor">@color/bleuTurquoise</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="correctText">
        <item name="android:textColor">@color/greenCorrectText</item>
    </style>

    <style name="wrongText">
        <item name="android:textColor">@color/redWrongText</item>
    </style>

</resources>
